module display_driver(
    input [23:0] K,
    output [6:0] SEG,
    output [7:0] DIG
);
    reg [19:0] freq_hz;
    reg [3:0] digits [0:5];
    
    // 频率计算：f = K * 100MHz / 2^24 ≈ K * 5.96
    always @(*) begin
        freq_hz = K * 6;  // 近似计算
        
        digits[0] = freq_hz % 10;
        digits[1] = (freq_hz / 10) % 10;
        digits[2] = (freq_hz / 100) % 10;
        digits[3] = (freq_hz / 1000) % 10;
        digits[4] = (freq_hz / 10000) % 10;
        digits[5] = (freq_hz / 100000) % 10;
    end
    
    // 七段译码器
    seg7_driver seg7(
        .digits(digits),
        .SEG(SEG),
        .DIG(DIG)
    );
endmodule